<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form users-form">
      <div class="form-body">

        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with url:"/users/#{@user.id}/update", method: :patch, local: true, html: { multipart: true } do |form| %>
          <p>ユーザー名</p>
          <%= form.text_field :name, value: @user.name %>

          <p>プロフィール画像</p>
          <%= form.file_field :image %>

          <p>メールアドレス</p>
          <%= form.email_field :email, value: @user.email %>

          <p>所在地</p>
          <%= form.collection_select :prefecture_id, Prefecture.all, :id, :name, { include_blank: "---" } %>

          <%= form.submit "保存" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

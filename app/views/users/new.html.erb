<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
      <div class="form users-form">
        <div class="form-body">

          <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
          <% end %>
          <%= form_tag("/users/create", {multipart: true}) do %>
          <div>
            <label for="name">ユーザー名</label>
            <input name="name" id="name" value="<%= @user.name %>">
          </div>
          <div>
            <label for="email">メールアドレス</label>
            <input name="email" id="email" value="<%= @user.email %>">
          </div>
          <div>
            <label for="prefecture_id">所在地</label>
            <%= select_tag 'prefecture_id', options_from_collection_for_select(Prefecture.all, :id, :name), {include_blank: "---"} %>
          </div>
          <div>
            <label for="password">パスワード</label>
            <input type="password" id="password" name="password" value="<%= @user.password %>">
          </div>
          <input type="submit" value="新規登録">
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>